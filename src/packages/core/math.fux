package core

math {

    typedef int|uint|float|double allInt;

    pi: double === 3.141592653589793115997963468544185161590576171875;

    root(exponent: allInt, number: allInt): double {
        return number ^ (1/exponent);
    }

    sqrt(number: uint|float|double): double {
        return root(2, number);
    }

    sin(number: allInt): double;
     
    cos(number: allInt): double;

    tan(number: allInt): double;

}